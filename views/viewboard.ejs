<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= boards.boardName %></title>
    <%- include('partials/logo.ejs') %>
    <link rel="stylesheet" href="../stylesheets/arrange.css">
</head>
<body>
    <%- include('partials/header.ejs') %>
    <div class="masonry-grid">
        <% if(boards.posts.length > 0) { %>
        <% boards.posts.forEach(function(post) { %>
            <a href="/yourpost/<%= post._id %>" class="masonry-item">
                <% if(post.postImage.includes(".jpg")) { %>
                    <img src="../images/uploads/<%= post.postImage %>" alt="">
                <%} else { %>
                    <video src="../images/uploads/<%= post.postImage %>" controls="true"></video>
                <% } %>
                <h4><%= post.postTitle %> - <%= post.pins %> Pins</h4>
            </a>
        <% })} %>
    </div>
        <% if(boards.posts.length == 0) { %>
            <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; margin-top: 50px; margin-bottom: 50px;">
                <img style="width: 200px; height: 200px;" class="noboard" src="../images/noposts.png" alt="">
                <h2>No Posts yet</h2>
            </div>
        <% } %>
    <div class="adddiv">
        <a class="add" href="/addpost/<%= boards._id %>">Add Post</a>
        <a class="del" href="/deleteboard/<%= boards._id %>">Delete Board</a>
        <a class="goback" href="/boards">Go back</a>
    </div>
</body>
</html>