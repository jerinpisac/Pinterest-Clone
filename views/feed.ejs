<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <%- include('partials/logo.ejs') %>
    <link rel="stylesheet" href="../stylesheets/arrange.css">
</head>
<body>
    <%- include('partials/header.ejs') %>
    <div>
        <div class="masonry-grid">
            <% posts.forEach(function(post){ %>
                <a href="/seepost/<%= post._id %>" class="masonry-item">
                    <% if(post.postImage.includes(".jpg")) { %>
                        <img src="../images/uploads/<%= post.postImage %>" alt="">
                    <%} else { %>
                        <video src="../images/uploads/<%= post.postImage %>" controls="true"></video>
                    <% } %>
                    <h4>Title: <%= post.postTitle %></h4>
                    <h5>Username: @ <%= post.user.username %></h5>
                    <h5>No. of Pins: <%= post.pins %></h5>
                </a>
            <% }) %>
        </div>
    </div>
</body>
</html>